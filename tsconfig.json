{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    // "strict": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "sourceMap": true,
    "watch": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",  
    ".vscode",
    "e2e",
    "dist"    
  ]
}
